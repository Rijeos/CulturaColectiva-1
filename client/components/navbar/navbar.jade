div.navbar-fixed(ng-controller='NavbarController')
  nav
    div.nav-wrapper.white
      a.brand-logo(href="/")
        img(width="129px", src="assets/images/logo-cc.svg")
      a.button-collapse(href="#", data-activates="mobile-cc", style="text-decoration:none;")
        i.material-icons(style="color:black;") menu
      ul.right.barcc
        
        li(ng-show='nav.isAdmin()', ui-sref-active='active')
          a(ui-sref='admin') Admin
        li
          a(ui-sref='mainEditor', alt="CMS")
            i.material-icons insert_drive_file
        li
          a(href="#")
            i.material-icons search
        li
          a(href="#")
            i.material-icons reply
        li
          a(ui-sref='login')
            i.material-icons account_circle
        li(ng-show='nav.isLoggedIn()')
          p.navbar-text Hola {{ nav.getCurrentUser().name }}
        li(ng-show='nav.isLoggedIn()', ui-sref-active='active')
          a(ui-sref='settings')
            span.glyphicon.glyphicon-cog

        li(ng-show='nav.isLoggedIn()')
          a(ui-sref='logout') Logout
      ul.side-nav#mobile-cc
        li(ng-repeat='item in nav.menu', ui-sref-active='active')
          a(ui-sref='{{item.state}}') {{item.title}}
        li
          a(ui-sref='signup') Registro
        li
          a(ui-sref='login') Login
        li
          a(ui-sref='mainEditor') CMS
        li(ng-show='nav.isLoggedIn()', ui-sref-active='active')
          a(ui-sref='settings')
            span.glyphicon.glyphicon-cog
        li(ng-show='nav.isLoggedIn()')
          a(ui-sref='logout') Logout
script.
  $(".button-collapse").sideNav();